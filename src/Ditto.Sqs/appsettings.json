{
  "Metrics": {
    "Enabled": true,
    "Path": "metrics/"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Datadog.Logs"
    ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext", 
      "WithMachineName"
    ],    
    "Properties": {
      "ApplicationName": "Ditto.Kinesis"
    }
  },
  "AWS": {
    "RetryMode": "Standard"
  }
}